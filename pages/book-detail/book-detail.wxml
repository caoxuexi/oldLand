<!-- pages/book-detail/book-detail.wxml -->
<wxs src="../../utils/filter.wxs" module="filter"/>

<view class="container">
    <view class="head">
        <image src="{{book.image}}" />
        <text class='title'>{{book.title}}</text>
        <text class='anthor'>{{book.author}}</text>
    </view>
    <view class="sub-container">
        <text class="headline">短评</text>
        <view class="comment-container">
            <block wx:for="{{filter.limit(comments,15)}}" wx:key="content">
                <c-tag tag-class="{{filter.tag_index(index)}}" text="{{item.content}}" >
                    <text class="num" slot="after">{{'+'+item.nums}}</text>
                </c-tag>
            </block>
        </view>
    </view>
    <view class="sub-container">
        <text class="headline">内容简介</text>
        <text class="content" decode="{{true}}">{{filter.format(book.summary)}}</text>
    </view>
    <view class="sub-container">
        <text class="headline">书本信息</text>
        <view class="detail-container">
            <view class="vertical description">
                <text>出版社</text>
                <text>出版年</text>
                <text>页数</text>
                <text>定价</text>
                <text>装帧</text>
            </view>
            <view class="vertical">
                <text>{{book.publisher}}</text>
                <text>{{book.pubdate}}</text>
                <text>{{book.pages}}</text>
                <text>{{book.price}}</text>
                <text>{{book.binding}}</text>
            </view>
        </view>
    </view>
</view>

<view class="post-container" hidden="{{posting}}">
    <view bind:tap="onFakePost" class="post-fake">
        <text>输入短评</text>
    </view>
    <view class="like-container">
        <c-like bind:like="onLike" class="like" like="{{likeStatus}}" count="{{likeCount}}" />
    </view>
</view>

<view class="posting-container" wx:if="{{posting}}">
    <view class="post-header">
        <text wx:if="{{comments==true}}">仅可点击标签+1</text>
        <text wx:else>暂无短评</text>
        <text bind:tap="onCancel" class="cancel">取消</text>
    </view>
    <view class="comment-container">
        <block wx:for="{{filter.limit(comments, 3)}}" wx:key="content">
            <c-tag bind:tapping="onPost" tag-class="{{filter.tag_index(index)}}" text="{{item.content}}">
                <text class="num" slot="after">{{'+'+item.nums}}</text>
            </c-tag>
        </block>
    </view>
    <input bindconfirm="onPost" class="post" placeholder='短评最多12个字'></input>
</view>

<c-mask wx:if="{{posting}}"/>
